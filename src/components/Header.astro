---
const links = [
  { href: '/', text: 'Home' },
  { href: '/timeline', text: 'Timeline' },
];
---

<header
  class="bg-background-page/60 sticky top-0 z-10 overflow-x-hidden p-1 backdrop-blur-xs">
  <div class="mx-auto flex max-w-[1000px] justify-between px-4">
    <div class="font-bold hover:underline">
      <a href="/">
        <img
          src="/favicon.svg"
          alt="koteiou.pages.dev"
          class="mr-1 inline h-4"
        /><span class="hidden md:inline">koteiou.pages.dev</span>
      </a>
    </div>

    <nav class="flex gap-4">
      {
        links.map((link) => (
          <a href={link.href} class="hover:underline">
            {link.text}
          </a>
        ))
      }
    </nav>
  </div>
</header>
