---
export interface Props {
  data: {
    type: string;
    url: string;
    newTab: boolean;
    title: string;
    tags?: string[];
    image?: string;
    pubDate: Date;
  }[];
}

const { data } = Astro.props;
import ArticleListLink from './ArticleListLink.astro';
---

<ul class="grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-3">
  {
    data.map((post) => {
      const bandColor = {
        blog: 'border-l-accent',
        custommap: 'border-l-article-u2',
      }?.[post.type];
      return <ArticleListLink {...post} {bandColor} />;
    })
  }
</ul>
